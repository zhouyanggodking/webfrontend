{
    "name": "sass-demo",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "lite": "lite-server",
        "scss-compile:watch": "node-sass -rw sass/ -o css/",
        "scss-compile:compile": "node-sass sass/ -o css/",
        "autoprefixer:watch": "postcss css/**/*.css --use autoprefixer -d cssbuild -w",
        "autoprefixer:build": "postcss css/**/*.css --use autoprefixer -d cssbuild",
        "start": "concurrently \"npm run scss-compile:compile\" \"npm run scss-compile:watch\" \"\" \"npm run lite\" \"npm run autoprefixer:watch\""
    },
    "devDependencies": {
        "autoprefixer": "^7.1.4",
        "concurrently": "^3.1.0",
        "lite-server": "^2.2.2",
        "node-sass": "^3.13.1",
        "postcss-cli": "^4.1.1"
    },
    "author": "",
    "license": "ISC"
}