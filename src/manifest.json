{
  "name": "GodKingExtension",
  "description": "Demo chrome extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "hello.html",
    "default_icon": "icons8-chrome-64.png"
  },
  "omnibox": { "keyword" : "bing" },
  "permissions": ["contextMenus", "activeTab", "tabs"],
  "icons": {
    "16": "icons8-chrome-64.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["content.css"]
    }
  ]
}